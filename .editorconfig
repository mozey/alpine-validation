# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{go,html,sh}]
# Set default charset
charset = utf-8
indent_style = tab
indent_size = 2

# Keep formatted same as what is generated by the deno CLI
[*.{ts,js,json,jsonc}]
charset = utf-8
indent_style = space
indent_size = 2

# These file types generally have less nesting, 
# therefore increase the indent size accordingly
[*.{md,css}]
charset = utf-8
indent_style = tab
indent_size = 4
